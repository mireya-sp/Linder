<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Linder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/linder_purple</item>
        <item name="colorPrimaryVariant">#7B1FA2</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">#121212</item>
    </style>

    <style name="CircleImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">#262626</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#888888</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="HeaderIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

</resources>