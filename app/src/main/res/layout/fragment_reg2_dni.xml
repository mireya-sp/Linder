<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:progress="20"
        android:progressTint="@color/linder_purple"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_title_dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/trirong"
        android:text="FotografÃ­a a tu Documento\nde Identidad:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_title_dni">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload_photo"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Subir foto"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:gravity="center"
            app:backgroundTint="#262626"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_attach"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconPadding="8dp"
            app:iconTint="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_take_photo"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Hacer foto"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:gravity="center"
            app:backgroundTint="#262626"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconPadding="8dp"
            app:iconTint="@color/white"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_dni"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#C4C4C4"
        android:fontFamily="@font/nunito"
        android:text="SIGUIENTE"
        android:textColor="#202124"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>