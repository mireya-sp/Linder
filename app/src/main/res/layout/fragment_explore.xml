<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <include
        android:id="@+id/include_top_bar"
        layout="@layout/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/include_bottom_nav"
        app:layout_constraintTop_toBottomOf="@id/include_top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marko_one"
                android:text="Explorar"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stable"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/transparent"
                app:cardBackgroundColor="@android:color/transparent"
                android:outlineSpotShadowColor="#80FFFFFF"
                android:outlineAmbientShadowColor="@android:color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_explore_pink"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_stable"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_heart_group"
                        app:tint="#FFFFFF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_stable"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_stable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/marko_one"
                        android:text="RelaciÃ³n estable"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_stable"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:clipChildren="false">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_free"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:outlineSpotShadowColor="#80FFFFFF"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_red_explore"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/marko_one"
                            android:text="Libre esta\nnoche"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:lineSpacingExtra="-2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/iv_bed"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/iv_bed"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:src="@drawable/ic_bed"
                            app:tint="#200000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_friends"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:outlineSpotShadowColor="#80FFFFFF"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple_explore"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/marko_one"
                            android:text="Hacer\namigos"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:lineSpacingExtra="-2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_people"
                            app:tint="#200020"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:clipChildren="false">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_travel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:outlineSpotShadowColor="#80FFFFFF"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple_explore"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/marko_one"
                            android:text="Lista para\nviajar"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:lineSpacingExtra="-2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_plane_arrival"
                            app:tint="#200020"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_events"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:outlineSpotShadowColor="#80FFFFFF"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_red_explore"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/marko_one"
                            android:text="Eventos y\nconciertos"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:lineSpacingExtra="-2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_music"
                            app:tint="#200000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:clipChildren="false">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_nature"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:outlineSpotShadowColor="#80FFFFFF"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_red_explore"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/marko_one"
                            android:text="Amante de\nla natura"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:lineSpacingExtra="-2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_tree"
                            app:tint="#200000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_beach"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:outlineSpotShadowColor="#80FFFFFF"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_purple_explore"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/marko_one"
                            android:text="Nada como\nla playa"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:lineSpacingExtra="-2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_beach"
                            app:tint="#200020"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>