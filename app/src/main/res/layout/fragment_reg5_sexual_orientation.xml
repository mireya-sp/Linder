<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp"
    android:clickable="true"
    android:focusable="true">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:progress="50"
        android:progressTint="#7B0082"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_title_orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/trirong"
        android:text="¿Cuál es tu orientación\nsexual?"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <RadioGroup
        android:id="@+id/rg_orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_orientation">

        <RadioButton
            android:id="@+id/rb_lesbiana"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/radio_selector_bg"
            android:button="@null"
            android:fontFamily="@font/nunito"
            android:paddingStart="20dp"
            android:text="Lesbiana"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical" />

        <RadioButton
            android:id="@+id/rb_bisexual"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/radio_selector_bg"
            android:button="@null"
            android:fontFamily="@font/nunito"
            android:paddingStart="20dp"
            android:text="Bisexual"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical" />

        <RadioButton
            android:id="@+id/rb_asexual"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/radio_selector_bg"
            android:button="@null"
            android:fontFamily="@font/nunito"
            android:paddingStart="20dp"
            android:text="Asexual"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_orientation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#C4C4C4"
        android:fontFamily="@font/nunito"
        android:text="SIGUIENTE"
        android:textColor="#202124"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>