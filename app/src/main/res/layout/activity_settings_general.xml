<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chevron_left"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajustes"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <TextView style="@style/LabelStyle" android:text="Numero de telefono" />
        <EditText
            style="@style/InputStyle"
            android:text="699116769"
            android:inputType="phone" />

        <TextView style="@style/LabelStyle" android:text="Ubicación" />
        <EditText
            style="@style/InputStyle"
            android:text="EL Mojon, Murcia"
            android:inputType="textPostalAddress" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferencia de distancia?"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tvDistanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="160km"
                android:textColor="#AAAAAA" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/slider_container_bg"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_plane_departure"
                app:tint="#FF0055" />

            <com.google.android.material.slider.Slider
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="160"
                app:thumbColor="#FFFFFF"
                app:trackColorActive="#FF0055"
                app:trackColorInactive="#333333" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_plane_arrival"
                app:tint="#D400FF" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango de edad"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tvAgeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="18 - 100 años"
                android:textColor="#AAAAAA" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/slider_container_bg"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_18_plus"
                app:tint="#FF0055" />

            <com.google.android.material.slider.RangeSlider
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:valueFrom="18"
                android:valueTo="100"
                app:values="@array/initial_range_values"
                app:thumbColor="#FFFFFF"
                app:trackColorActive="#FF0055"
                app:trackColorInactive="#333333" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_old_person"
                app:tint="#D400FF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>