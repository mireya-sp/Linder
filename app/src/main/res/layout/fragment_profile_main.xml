<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0010">

    <include
        android:id="@+id/include_top_bar"
        layout="@layout/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/include_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A0020"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgProfilePhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_thumb"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeWidth="2dp"
                        app:strokeColor="#8B008B"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Carla García, 23"
                        android:fontFamily="@font/trirong"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@id/imgProfilePhoto"
                        app:layout_constraintStart_toEndOf="@id/imgProfilePhoto"
                        app:layout_constraintEnd_toStartOf="@id/btnVerify" />

                    <ImageButton
                        android:id="@+id/btnVerify"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        tools:src="@drawable/ic_non_verified"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="@id/tvProfileName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvProfileName" />

                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="✏ Editar perfil"
                        android:fontFamily="@font/nunito"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:backgroundTint="#3A0050"
                        android:layout_marginTop="8dp"
                        app:cornerRadius="18dp"
                        app:layout_constraintTop_toBottomOf="@id/tvProfileName"
                        app:layout_constraintStart_toStartOf="@id/tvProfileName" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDoubleDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#2A0035"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/ll_manage_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_3_user"
                        android:contentDescription="Gestionar doble citas" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestionar Doble Citas"
                            android:fontFamily="@font/trirong"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elige tu dúo"
                            android:fontFamily="@font/nunito"
                            android:textColor="#CC99FF"
                            android:textSize="13sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:id="@+id/cardPlus" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" app:cardBackgroundColor="#1A0020" app:cardCornerRadius="16dp" app:cardElevation="4dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Linder" android:fontFamily="@font/marko_one" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PLUS" android:fontFamily="@font/nunito" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:layout_marginStart="8dp" android:background="@drawable/bg_plus_tag" />
                        <Space android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

                        <Button android:id="@+id/btnActualizar" android:layout_width="wrap_content" android:layout_height="36dp" android:text="Actualizar" android:fontFamily="@font/nunito" android:textColor="#FFFFFF" android:textSize="13sp" android:backgroundTint="#E53935" app:cornerRadius="18dp" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="20dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Incluye:" android:fontFamily="@font/nunito" android:textColor="#FFFFFF" android:textSize="14sp" android:textStyle="bold" />
                        <TextView android:layout_width="64dp" android:layout_height="wrap_content" android:text="Gratis" android:fontFamily="@font/nunito" android:textColor="#CCCCCC" android:textSize="13sp" android:gravity="center" />
                        <TextView android:layout_width="48dp" android:layout_height="wrap_content" android:text="Plus" android:fontFamily="@font/nunito" android:textColor="#CCCCCC" android:textSize="13sp" android:gravity="center" />
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:background="#3A0050" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingTop="12dp" android:paddingBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Descubre a quién le gustas" android:fontFamily="@font/nunito" android:textColor="#DDDDDD" android:textSize="13sp" />
                        <FrameLayout android:layout_width="64dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_lock" app:tint="#888888" /></FrameLayout>
                        <FrameLayout android:layout_width="48dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_check_mark" app:tint="#9C27B0" /></FrameLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2A0040" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingTop="12dp" android:paddingBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Retroceder ilimitados" android:fontFamily="@font/nunito" android:textColor="#DDDDDD" android:textSize="13sp" />
                        <FrameLayout android:layout_width="64dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_lock" app:tint="#888888" /></FrameLayout>
                        <FrameLayout android:layout_width="48dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_check_mark" app:tint="#9C27B0" /></FrameLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2A0040" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingTop="12dp" android:paddingBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Likes prioritarios" android:fontFamily="@font/nunito" android:textColor="#DDDDDD" android:textSize="13sp" />
                        <FrameLayout android:layout_width="64dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_lock" app:tint="#888888" /></FrameLayout>
                        <FrameLayout android:layout_width="48dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_check_mark" app:tint="#9C27B0" /></FrameLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2A0040" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingTop="12dp" android:paddingBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Mensaje antes de hacer match" android:fontFamily="@font/nunito" android:textColor="#DDDDDD" android:textSize="13sp" />
                        <FrameLayout android:layout_width="64dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_lock" app:tint="#888888" /></FrameLayout>
                        <FrameLayout android:layout_width="48dp" android:layout_height="wrap_content" android:gravity="center"><ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ico_check_mark" app:tint="#9C27B0" /></FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>