<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0010">

    <!-- ===== TOP BAR ===== -->
    <include
        android:id="@+id/include_top_bar"
        layout="@layout/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ===== SCROLL CONTENT ===== -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/include_top_bar"
        app:layout_constraintBottom_toTopOf="@id/include_bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- ===== PROFILE CARD ===== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A0020"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfilePhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/img_profile_placeholder"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#8B008B"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Carla García, 23"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@id/imgProfilePhoto"
                        app:layout_constraintStart_toEndOf="@id/imgProfilePhoto"
                        app:layout_constraintEnd_toStartOf="@id/btnDelete" />

                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close_circle"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="#E53935"
                        android:contentDescription="Eliminar perfil"
                        app:layout_constraintTop_toTopOf="@id/tvProfileName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvProfileName" />

                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="✏ Editar perfil"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:backgroundTint="#3A0050"
                        android:layout_marginTop="8dp"
                        app:cornerRadius="18dp"
                        app:layout_constraintTop_toBottomOf="@id/tvProfileName"
                        app:layout_constraintStart_toStartOf="@id/tvProfileName" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- ===== GESTIONAR DOBLE CITAS CARD ===== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDoubleDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#2A0035"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_group_people"
                        android:tint="#9C27B0"
                        android:contentDescription="Gestionar doble citas" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestionar Doble Citas"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elige tu dúo"
                            android:textColor="#CC99FF"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#9C27B0"
                        android:contentDescription="Ir" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ===== PLUS CARD ===== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1A0020"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header: Linder PLUS + Actualizar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Linder"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="PLUS"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:background="@drawable/bg_plus_badge" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnActualizar"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Actualizar"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:backgroundTint="#E53935"
                            app:cornerRadius="18dp" />

                    </LinearLayout>

                    <!-- Column headers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Incluye:"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="Gratis"
                            android:textColor="#CCCCCC"
                            android:textSize="13sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="Plus"
                            android:textColor="#CCCCCC"
                            android:textSize="13sp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Header divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#3A0050" />

                    <!-- ROW 1: Descubre a quién le gustas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Descubre a quién le gustas"
                            android:textColor="#DDDDDD"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lock_outline"
                            android:tint="#888888"
                            android:scaleType="center"
                            android:contentDescription="Bloqueado en versión gratis" />
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check"
                            android:tint="#9C27B0"
                            android:scaleType="center"
                            android:contentDescription="Disponible en Plus" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2A0040" />

                    <!-- ROW 2: Retroceder ilimitados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Retroceder ilimitados"
                            android:textColor="#DDDDDD"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lock_outline"
                            android:tint="#888888"
                            android:scaleType="center"
                            android:contentDescription="Bloqueado en versión gratis" />
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check"
                            android:tint="#9C27B0"
                            android:scaleType="center"
                            android:contentDescription="Disponible en Plus" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2A0040" />

                    <!-- ROW 3: Likes prioritarios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Likes prioritarios"
                            android:textColor="#DDDDDD"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lock_outline"
                            android:tint="#888888"
                            android:scaleType="center"
                            android:contentDescription="Bloqueado en versión gratis" />
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check"
                            android:tint="#9C27B0"
                            android:scaleType="center"
                            android:contentDescription="Disponible en Plus" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2A0040" />

                    <!-- ROW 4: Mensaje antes de hacer match -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mensaje antes de hacer match"
                            android:textColor="#DDDDDD"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lock_outline"
                            android:tint="#888888"
                            android:scaleType="center"
                            android:contentDescription="Bloqueado en versión gratis" />
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check"
                            android:tint="#9C27B0"
                            android:scaleType="center"
                            android:contentDescription="Disponible en Plus" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ===== BOTTOM NAV ===== -->
    <include
        android:id="@+id/include_bottom_nav"
        layout="@layout/bottom_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>