<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent_purple">#8A2BE2</color>
    <color name="background_dark">#0F0F0F</color>
    <color name="black">#FF000000</color>
    <color name="card_dark">#1A1A1A</color>
    <color name="linder_black">#000000</color>
    <color name="linder_fuchsia">#FF00FF</color>
    <color name="linder_gray_button">#C4C4C4</color>
    <color name="linder_purple">#6A007B</color>
    <color name="primary_pink">#FF007A</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="app_name">Linder</string>
    <string name="title_dashboard">Dashboard</string>
    <string name="title_home">Home</string>
    <string name="title_notifications">Notifications</string>
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#2A2A2A</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#888888</item>
    </style>
    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="Theme.Linder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>